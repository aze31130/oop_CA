@model oop_CA.Models.GroupModel;
@{
    ViewData["Title"] = "Details";
}

<h1>Group details</h1>
<div>
    <h4>Group</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Group name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class="col-sm-2">
            Referent Teacher ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.referentTeacherId)
        </dd>
    </dl>
    <div>
        <div>Student inside this group:</div>
        @foreach (var item in Model.userList)
        {
            <a>Firstname: @item.firstname</a>
            <br />
            <a>Lastname: @item.lastname</a>
            <br />
            <a>Email: @item.email</a>
            <br />
            <a>Username: @item.username</a>
            <br />
            <a>Type: @item.userType</a>
            <br />
            <a>-----</a>
            <br />
        }
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.id">Edit</a> |
    <a asp-action="Index">Back to the Index</a>
</div>