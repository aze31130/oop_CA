@model oop_CA.Models.User;
@{
    ViewData["Title"] = "Remove user";
}

<h1>Remove User</h1>
<h3>Are you sure to delete this user ? It will be lost forever (a very long time!)</h3>

<div>
    <h4>Selected User:</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            User Id
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt class="col-sm-2">
            First Name
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(model => model.firstname)
        </dt>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.lastname)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(model => model.email)
        </dt>
        <dt class="col-sm-2">
            Username
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.username)
        </dd>
        <dt class="col-sm-2">
            User Type
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.userType)
        </dd>
    </dl>

    <form asp-action="RemoveFunction">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Remove" class="btn btn-danger" /> |
        <a asp-action="Index">Back to the Index</a>
    </form>
</div>