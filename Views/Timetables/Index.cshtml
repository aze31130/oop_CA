                @foreach (Course c in @Model)
                {
                    @if (c.beginHour.Equals(i) && c.day.Equals(Enumeration.DAY.MONDAY))
                    {
                        @Html.DisplayFor(ModelItem => c.subject)
                        @Html.Raw("<br/>");
                        @Html.DisplayFor(ModelItem => c.type)
                    }
                }
