@model IEnumerable<oop_CA.Models.Course>;

<h1>TimeTable</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                
            </th>
            <th>
                MONDAY
            </th>
            <th>
                TUESDAY
            </th>
            <th>
                WEDNESDAY
            </th>
            <th>
                THURSDAY
